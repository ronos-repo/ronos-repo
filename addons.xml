<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

<addon id="plugin.audio.googlemusic.exp"
       name="Google Music EXP"
       version="1.2"
       provider-name="ronos">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="xbmc.addon" version="12.0.0"/>
    <import addon="script.module.parsedom" version="2.5.1"/>
    <import addon="script.module.decorator" version="3.4.0"/>
    <import addon="script.module.requests" version="1.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Experimental Google Music audio plugin</summary>
    <description lang="en">Plugin that lets you play music from Google Music.</description>
  </extension>
</addon>

<addon id="repository.ronos" name="ronos Add-on repository" version="1.0.0" provider-name="ronos">
<extension point="xbmc.addon.repository" name="ronos Add-on repository">
		<dir>
			<info compressed="false">http://raw.github.com/ron23/ronos-repo/master/addons.xml</info>
			<checksum>http://raw.github.com/ron23/ronos-repo/master/addons.xml.md5</checksum>
			<datadir zip="true">http://raw.github.com/ron23/ronos-repo/master/</datadir>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Install Add-ons from ronos</summary>
		<description lang="en">Download and install add-ons from ronos repository.</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>